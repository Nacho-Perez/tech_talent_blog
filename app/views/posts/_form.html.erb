<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> evitó que este post sea guardado:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Título", class: "title-option" %>
    <%= form.text_field :title, id: :post_title, class: "input-option" %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %> <!-- unless post.user -->
  </div>

  <div class="field">
    <%= form.label "Categoría", class: "title-option" %>
    <%= form.select :category, [["Fútbol", "futbol"], ["Baloncesto", "baloncesto"], ["Tenis", "tenis"], ["Motor", "motor"], ["Otros deportes", "otros deportes"]] %>
  </div>

  <div class="field">
    <%= form.label "Contenido", class: "title-option" %>
    <%= form.text_area :input_blog, id: :post_input_blog, size: "100x6" %>
  </div>

  <div class="field">
    <%= form.label "Imagen del post:", class: "title-option" %>
    <%= form.file_field :picture %>
  </div>

  <br>
  
  <div class="actions">
    <%= form.submit submit_text, class: "btn btn-#{@category ? @category.split.join : "dark"}" %>   
  </div>
<% end %>
