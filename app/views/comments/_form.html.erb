<%= form_with(model: comment, local: true) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="form-group">
    <%= form.text_area :input_comment, id: :comment_input_comment, placeholder: "AquÃ­ tu comentario", class: "form-control" %> <!-- :size => 75 -->
  </div>

  <div class="form-group">
    <%= form.hidden_field :post_id, id: :comment_post_id, value: @post.id %>
  </div>

  <div class="form-group">
    <% if @post.category == 'futbol' %>
      <%= form.submit "Enviar comentario", class: "btn btn-success" %>
    <% elsif @post.category == 'baloncesto' %>
      <%= form.submit "Enviar comentario", class: "btn btn-danger" %>  
    <% elsif @post.category == 'tenis' %>
      <%= form.submit "Enviar comentario", class: "btn btn-warning" %>
    <% elsif @post.category == 'motor' %>
      <%= form.submit "Enviar comentario", class: "btn btn-secondary" %>  
    <% elsif @post.category == 'otros deportes' %>
      <%= form.submit "Enviar comentario", class: "btn btn-primary" %>
    <% else %>
      <%= form.submit "Enviar comentario", class: "btn btn-dark" %>
    <% end %>  
  </div>
<% end %>
